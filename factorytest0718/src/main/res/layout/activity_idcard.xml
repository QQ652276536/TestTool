<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IdCardActivity">

    <TextView
        android:id="@+id/text_idcard"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_margin="5sp"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:text="靠近二代身份证/永久居留证"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_idcard"
            android:layout_width="140sp"
            android:layout_height="190sp"
            android:background="@drawable/idcard_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_readversion_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/btn_style_2"
                android:gravity="center"
                android:onClick="OnClickReadVersion"
                android:text="SAM版本"
                android:textColor="@color/white"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btn_read_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/btn_style_2"
                android:gravity="center"
                android:onClick="OnClickReadIDCard"
                android:text="读取身份证"
                android:textColor="@color/white"
                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_top_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/top" />

            <ImageButton
                android:id="@+id/btn_bottom_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/bottom" />

            <ImageButton
                android:id="@+id/btn_clear_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/clear" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
