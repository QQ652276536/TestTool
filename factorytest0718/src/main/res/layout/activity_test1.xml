<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/read"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.zistone.mylibrary.view.MyRemoteControlButton
            android:id="@+id/mrcb_test1"
            android:layout_width="200sp"
            android:layout_height="200sp" />

        <com.zistone.mylibrary.view.MySectorView
            android:id="@+id/msv_test1"
            android:layout_width="200sp"
            android:layout_height="200sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182sp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/centre"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:background="@color/colorAccent" />

            <Button
                android:id="@+id/close"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_above="@+id/centre"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@color/gray"
                android:text="白云"
                android:textColor="#000000" />

            <Button
                android:id="@+id/call"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@+id/centre"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@color/orange"
                android:text="蓝天"
                android:textColor="#000000" />

            <Button
                android:id="@+id/open"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:layout_toLeftOf="@+id/centre"
                android:background="@color/material_green"
                android:text="青龙"
                android:textColor="#000000" />

            <Button
                android:id="@+id/save"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/centre"
                android:background="@color/material_red"
                android:text="白虎"
                android:textColor="#000000" />
        </RelativeLayout>
    </LinearLayout>

    <com.zistone.mylibrary.view.MyBarGraphView
        android:id="@+id/mbcv_bar_graph"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10sp" />
</LinearLayout>




