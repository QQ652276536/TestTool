<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    android:orientation="vertical"
    tools:context=".ScanCodeActivity_Temp">

    <TextView
        android:id="@+id/txt_scancode"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:text=""
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@color/darkgray"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_top_scancode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/top" />

        <ImageButton
            android:id="@+id/btn_bottom_scancode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/bottom" />

        <ImageButton
            android:id="@+id/btn_clear_scancode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/clear" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="按键F2开启扫描头"
        android:textColor="@color/read"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_scan_scancode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style_2"
            android:enabled="false"
            android:text="正在读取..."
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>