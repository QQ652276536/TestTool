<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_idcard"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="身份证读取" />

            <Button
                android:id="@+id/btn_idcard_test"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="身份证压力测试" />

            <Button
                android:id="@+id/btn_otg"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="OTG" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_nfc"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="NFC" />

            <Button
                android:id="@+id/btn_gps_camera"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="GPS拍照" />

            <Button
                android:id="@+id/btn_scan_test"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="扫码" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_f1_key"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="设置一键拨号" />
            <Button
                android:id="@+id/btn_face_id"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="人证核验" />
        </TableRow>
    </TableLayout>
</LinearLayout>