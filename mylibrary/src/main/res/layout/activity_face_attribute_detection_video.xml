<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".face.FaceAttributeDetectionVideoActivity">

    <TextureView
        android:id="@+id/texture_preview_attribute_detection_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.zistone.mylibrary.face.widget.FaceRectView
        android:id="@+id/rect_view_attribute_detection_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_switch_attribute_detection_video"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@drawable/btn_style_2"
        android:text="切换摄像头"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_return_attribute_detection_video"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@drawable/btn_style_2"
        android:text="返回"
        android:textColor="@color/white" />

</FrameLayout>