<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_attribute_detection_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:minWidth="100dp"
            android:minHeight="100dp" />

        <Button
            android:id="@+id/btn_local_attribute_detection_img"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/btn_style_2"
            android:text="选择本地图片"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_start_compare_attribute_detection_img"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/btn_style_2"
            android:text="开始处理"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_face_attribute_detection_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5sp"
            android:fadeScrollbars="false"
            android:scrollbars="vertical"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>