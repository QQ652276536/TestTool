<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".face.FaceIdCompareChooseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_faceid_compare_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:minHeight="100dp" />

            <TextView
                android:id="@+id/txt_faceid_compare_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="" />

            <Button
                android:id="@+id/btn_reader_faceid_compare_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_style_2"
                android:onClick="ReaderImage"
                android:text="读卡器读取"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_choose_faceid_compare_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_style_2"
                android:onClick="ChooseLocalImage"
                android:text="本地上传"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="（请选择证件照上传）" />

            <Button
                android:id="@+id/btn_start_faceid_compare_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/btn_style_2"
                android:onClick="RealTimeCollection"
                android:text="实时采集"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>